<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pablo.tiki.UserMenu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Toggle Leds"
            android:id="@+id/buttonToggleLeds"
            android:layout_gravity="center_horizontal"
            android:onClick="toggle" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Play Sequence"
            android:id="@+id/buttonPlaySequence"
            android:layout_gravity="center_horizontal"
            android:onClick="playSequence" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:id="@+id/buttonSound"
            android:layout_gravity="center_horizontal"
            android:onClick="sound" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Quit"
            android:id="@+id/buttonQuit"
            android:layout_gravity="center_horizontal"
            android:onClick="quit" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/adminZone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Zone"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Lock Server"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:onClick="lockServer" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Shutdown"
                android:id="@+id/button3"
                android:layout_gravity="center_horizontal"
                android:onClick="shutdown" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
